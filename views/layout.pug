html
  head
    title API Client
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    style(type="text/css").
      body {
        margin: 0;
        padding: 0;
        display: grid;
        grid-template-rows: 2fr 1fr;
        width: 100vw;
        height: 100vh;
        font-family: sans-serif;
        background-color: #84a78d;
      }

      .ui-wrapper {
        padding: 1em;

        display: flex;
        flex-flow: row wrap;
        justify-content: space-around;
      }

      .ui-wrapper > div {
        padding: 1em;

        background-color: #333c3e;
        box-shadow: 0 0 15px 4px rgba(0, 0, 0, 0.06);

        border-radius: 0.25em;
        flex: 1 1 auto;
        margin: 1%;
      }

      form {
        display: flex;
        flex-flow: column nowrap;
        //- height: 100%;
      }

      button {
        color: #494949 !important;
        text-transform: uppercase;
        text-decoration: none;
        background: #ffffff;
        padding: 20px;
        border: 4px solid #494949 !important;
        display: inline-block;

        font-size: 1rem;
        line-height: 1.9;

        margin-top: auto;
      }

      input {
        padding: 0.7em;
        margin: 1em 0.3em;

        background: none;
        border: 0;
        border-bottom: solid 1px palegoldenrod;

        color: white;
      }

      .result-wrapper {
        padding: 1em;
      }

      .statusDisplay {
        padding: 1em;
        font-size: x-large;
      }
      .result-content {
        background-color: azure;
        border-radius: 1em;
      }

      .bodyDisplay {
        padding: 1em;
      }

      .response-body {
        font-size: x-large;
      }
  body
    div(class="ui-wrapper")
      div
        form(id="find" action="/view" method="POST")
          fieldset
            input(
              type="number"
              id="id"
              name="id"
              min="0"
              placeholder="Entrez ID (vide pour tout)")
            button(type="submit") Récupérer
      div
        form(id="add" action="/add" method="POST")
          fieldset
            input(
              type="text"
              id="etudiantNom"
              name="etudiantNom"
              placeholder="Nom"
              required)
            input(
              type="text"
              id="etudiantVille"
              name="etudiantVille"
              placeholder="Ville"
              required)
            input(
              type="text"
              id="etudiantMoyenne"
              name="etudiantMoyenne"
              placeholder="Moyenne"
              required)
            button(type="submit") Ajouter
        p= addedData
      div
        form(id="update" name="update" action="/update" method="POST")
          fieldset
            input(
              type="number"
              id="id"
              name="id"
              min="0"
              placeholder="Entrez l'ID "
              required)
            input(
              type="text"
              id="etudiantNom"
              name="etudiantNom"
              placeholder="Nom"
              required)
            input(
              type="text"
              id="etudiantVille"
              name="etudiantVille"
              placeholder="Ville"
              required)
            input(
              type="text"
              id="etudiantMoyenne"
              name="etudiantMoyenne"
              placeholder="Moyenne"
              required)
            button(type="submit") Modifier
      div
        form(id="remove" action="/delete" method="POST")
          fieldset
            input(
              type="number"
              id="id"
              name="id"
              min="0"
              placeholder="Entrez l'ID")
            button(type="submit") Supprimer
    div(class="result-wrapper")
      block response-data
